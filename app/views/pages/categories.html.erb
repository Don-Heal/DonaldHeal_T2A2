<h1>Listed Items</h1>
<div class="container">
    <div class= "row row-cols-sm-1 row-cols-ms-2 row-cols-lg-4">
    <%# making each card for total Items that are held within the database using bootstrap for styling and positioning%>
        <%=@item.each do |item|%>
        <div class="col-4 ">
        <%if item.picture.attached?%>
            <%=image_tag item.picture, alt: item.name, class:"thumbnail card-img top"%>
        <%else%>
            <%=image_tag "dice-img.jpg", alt: "dice", class:"thumbnail card-img top"%>
        <%end%>
        
    <div class="card-body">
    <h5 class="card-title"><%=item.name%></h5>
    </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Condition: <%=item.condition%></li>
            <li class="list-group-item">Price: <%=item.price%></li>    
        </ul>
        <div class="card-body">
                <%if current_user && current_user.id == @item.user_id%>
                    <%= link_to "Edit", edit_item_path, class: "mt-auto btn btn-warning"%>
                    <a href="/items/index" class="mt-auto btn btn-info">Return to Marketplace</a>
                <%else%>
                    <a href="/items/index" class="mt-auto btn btn-info">Return to Marketplace</a>
                    <a href="/purchase/user/<%=current_user.id%>" class="mt-auto btn btn-primary">Buy now</a>
                <%end%>
        </div>
        </div>
    <%end%>
</div>
</div>