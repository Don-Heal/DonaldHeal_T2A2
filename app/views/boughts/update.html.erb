<h1>Purchase <%=@item.name %> confimation</h1>

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" 
            <%=image_tag @item.picture, alt: @item.name, class:"thumbnail card-img top"%>
        <span class="font-weight-bold"><%=@item.name%></span><span class="text-black-50">Seller: <%=@item.user.email%></span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                </div>
                <div class="row mt-3">
                <h3><div class="col-md-12"><label class="labels">Price: <%=@item.price %></div></h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="mt-5 text-center"><%= link_to "Confirm purchase", "/items/index", class: "mt-auto btn btn-primary"%></div>
                <div class="mt-5 text-center"><%= link_to "Return to Marketplace", "/items/index", class: "mt-auto btn btn-warning"%></div>
            </div>
        </div>
    </div>
</div>
</div>
</div>