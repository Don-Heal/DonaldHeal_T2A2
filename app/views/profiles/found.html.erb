<h1 class="p-5 text-light shadow-1-strong rounded mb-3">People near you</h1>

<div class="container">
    <div class= "row row-cols-sm-1 row-cols-ms-2 row-cols-lg-4">
        <%# making each card for total Items that are held within the database using bootstrap for styling and positioning%>
        <%@profile.each do |profile|%>
            <div class="col-4">
                <%if profile.picture.attached?%>
                    <%=image_tag profile.picture, alt: profile.username, class:"thumbnail card-img top"%>
                <%else%>
                    <%=image_tag "profile-img.jpg", alt: "default-image", class:"thumbnail card-img top"%>
                <%end%>
                    <div class="card-body mb-3 bg-light">
                        <h5 class="card-title">Username: <%=profile.username%></h5>
                            <ul class="list-group list-group-flush">
                                    <div class="stats">
                                <a href="/profile/<%=profile.id%>"class="mt-auto btn btn-primary">Contact</a>
                            </ul>
                    </div>
            </div>
        <%end%>
    </div>
</div>
