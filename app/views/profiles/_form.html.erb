
<%=form_with model: @profile, local: true do |f| %>
<div class="p-5 text-dark bg-light bg-light shadow-1-strong rounded mb-3">
    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">Username: </label>
            <div class="col-sm-5">
                <%=f.text_field :username, placeholder: "Username", :required => true%>
            </div>
    </div>

    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">Address: </label>
            <div class="col-sm-5">
                <%=f.text_field :address, placeholder: "123 Main st", :required => true%>
            </div>
    </div>

    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">Address: </label>
            <div class="col-sm-5">
                <%=f.text_field :address2, placeholder: "Apartment, studio, or floor"%>
            </div>
    </div>

    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">City: </label>
            <div class="col-sm-5">
                <%=f.text_field :city, placeholder: "Sydney", :required => true%>
            </div>
    </div>

    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">State: </label>
            <div class="col-sm-5">
                <%=f.text_field :state, placeholder: "NSW", :required => true%>
            </div>
    </div>

    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">Zip: </label>
            <div class="col-sm-5">
                <%=f.text_field :zip, placeholder: "1234", :required => true, max: 4, min: 4%>
            </div>
    </div>

    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">Country: </label>
            <div class="col-sm-5">
                <%=f.text_field :country, placeholder: "Country", :required => true%>
            </div>
    </div>

    <div class="form-group row">
        <label for="title3" class="col-sm-2 col-form-label">Profile Picture</label>
            <div class="col-sm-5">
                <%=f.file_field :picture, accept: "image/jpg, image/png, image/jpeg, image/gif"%>
            </div>
    </div>
</div>

    <%=f.submit%>
    
<%end%>
</div>
